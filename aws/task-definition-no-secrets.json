{
  "family": "hotelx-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "hotelx-backend",
      "image": "IMAGE_PLACEHOLDER",
      "essential": true,
      "portMappings": [{"containerPort": 8080, "protocol": "tcp"}],
      "environment": [
        {"name": "SPRING_PROFILES_ACTIVE", "value": "prod"},
        {"name": "FRONTEND_URL", "value": "https://d2psq8ngxcnouh.cloudfront.net"},
        {"name": "DATABASE_NAME", "value": "hotelx"},
        {"name": "DATABASE_URI", "value": "REPLACE_WITH_MONGODB_URI"},
        {"name": "JWT_SECRET", "value": "REPLACE_WITH_JWT_SECRET"},
        {"name": "JWT_EXPIRATION", "value": "86400000"},
        {"name": "STRIPE_API_KEY", "value": "REPLACE_WITH_STRIPE_KEY"},
        {"name": "STRIPE_WEBHOOK_SECRET", "value": "REPLACE_WITH_WEBHOOK_SECRET"},
        {"name": "GOOGLE_CLIENT_ID", "value": "REPLACE_WITH_GOOGLE_CLIENT_ID"},
        {"name": "GOOGLE_CLIENT_SECRET", "value": "REPLACE_WITH_GOOGLE_CLIENT_SECRET"},
        {"name": "OKTA_CLIENT_ID", "value": "REPLACE_WITH_OKTA_CLIENT_ID"},
        {"name": "OKTA_CLIENT_SECRET", "value": "REPLACE_WITH_OKTA_CLIENT_SECRET"},
        {"name": "OKTA_ISSUER_URI", "value": "REPLACE_WITH_OKTA_ISSUER"},
        {"name": "BACKEND_URL", "value": "https://d3s0cjvn0y8ebg.cloudfront.net"},
        {"name": "CORS_ALLOWED_ORIGINS", "value": "https://d2psq8ngxcnouh.cloudfront.net,https://duw2jixvd02j5.cloudfront.net"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/hotelx-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "wget --quiet --tries=1 --spider http://localhost:8080/actuator/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
