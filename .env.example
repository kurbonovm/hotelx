# HotelX Local Development Environment Variables
# Copy this file to .env and fill in your actual values

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-min-32-chars
JWT_EXPIRATION=86400000

# Stripe Configuration (use test keys for local dev)
STRIPE_API_KEY=sk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# Google OAuth (optional for local dev)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Okta OAuth2 (optional for local dev)
OKTA_CLIENT_ID=your-okta-client-id
OKTA_CLIENT_SECRET=your-okta-client-secret
OKTA_ISSUER_URI=https://your-domain.okta.com/oauth2/default

# Backend URL (for OAuth redirects)
BACKEND_URL=http://localhost:8080

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost

# API URL (for frontend)
VITE_API_URL=http://localhost:8080

